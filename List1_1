#include <stdio.h>

int main(void)

{

    int dogs, cats, tot;



    printf("How many dogs do you have?\n");

    scanf("%d", &dogs);

    printf("how many cats do you have?\n");

    scanf("%d", &cats);

    printf("So you have %d dog(s)!\n", dogs);

    printf("So you have %d cat(s)!\n", cats);

    tot = cats + dogs;

    printf("So you have %d pets in total!", tot);
    
    return 0;

}